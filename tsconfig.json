{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		}
	},
	"include": ["src/**/*", "__test__/**/*"],
	"linterOptions": {
		"exclude": [
			"src/services/AvatarBuilder/ImageGenerator/src/internal/identicon-avatar.ts"
		]
	}
}
